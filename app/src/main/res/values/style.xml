<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="KeyViewStyle">
        <item name="android:layout_weight">1</item>
        <item name="letterColour">@color/black</item>
        <item name="previewLetterColour">@color/black</item>
        <item name="letterBackgroundColour">@color/off_white</item>
        <item name="previewBackgroundColour">	@color/off_white</item>
        <item name="android:padding">@dimen/key_view_padding</item>
        <item name="showImage">false</item>
        <item name="keyShouldRepeat">false</item>
        <item name="shouldShowPreview">true</item>
    </style>

    <style name="SpecialKeyViewStyle" parent="KeyViewStyle">
        <item name="letterBackgroundColour">@color/light_silver</item>
        <item name="android:padding">6dp</item>
        <item name="shouldShowPreview">false</item>
    </style>

    <style name="KeyTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewHeadStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewStep" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/vivid_raspberry</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewVisibleDescription" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>

    </style>

<!--    <style name="ATheme" parent="Theme.NativeKeyboard">-->
<!--&lt;!&ndash;        <item name="android:background">#3F51B5</item>&ndash;&gt;-->
<!--    </style>-->

</resources>