<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="save"
            android:textColor="#E91E63"
            android:textSize="30sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_silver"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/vibrationSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Vibration:" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_silver"/>

        <TextView
            android:id="@+id/textView5"
            style="@style/TextViewVisibleDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Default Suggestions:" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/defaultSuggestionsInputRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            tools:listitem="@layout/single_suggestion_input" />

        <Button
            android:id="@+id/addInputButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_silver"/>

        <TextView
            android:id="@+id/textView6"
            style="@style/TextViewVisibleDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keyboard Colour:" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="NOTE: The last colour chosen before pressing save will be the background of your keyboard." />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/colurPreferenceRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_silver"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key Opacity:"
                android:textColor="#000000" />

            <SeekBar
                android:id="@+id/keyOpacitySeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>