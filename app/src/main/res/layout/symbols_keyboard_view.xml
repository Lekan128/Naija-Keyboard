    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--        Todo-->
        <com.olalekan.naijakeyboard.KeyView
            android:id="@+id/keyViewAbc"
            style="@style/SpecialKeyViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:letter="Abc"
            app:showInEditable="false" />

        <com.olalekan.naijakeyboard.KeyView
            android:id="@+id/keyViewSymStop"
            style="@style/KeyViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:letter="."
            app:showInEditable="true" />

        <com.olalekan.naijakeyboard.KeyView
            android:id="@+id/keyViewSymSpace"
            style="@style/KeyViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            app:letter="Space"
            app:shouldShowPreview="false"
            app:showInEditable="false" />

        <com.olalekan.naijakeyboard.KeyView
            android:id="@+id/keyViewSymQuestionMark"
            style="@style/KeyViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:letter="\?"
            app:showInEditable="true" />

        <!--        todo-->
        <com.olalekan.naijakeyboard.KeyView
            android:id="@+id/keyViewSymEnter"
            style="@style/SpecialKeyViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:image="@drawable/ic_baseline_keyboard_return_24"
