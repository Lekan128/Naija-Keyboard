            app:showInEditable="true" />

        <com.olalekan.naijakeyboard.KeyView
            android:id="@+id/keyViewSymR3C10"
            style="@style/KeyViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:letter=")"
            app:showInEditable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--todo-->
        <com.olalekan.naijakeyboard.KeyView
            android:id="@+id/keyViewSymMode"
            style="@style/SpecialKeyViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            app:letter="1/4"
            app:showInEditable="false" />


        <com.olalekan.naijakeyboard.KeyView
            android:id="@+id/keyViewSymR4C1"
            style="@style/KeyViewStyle"
