            android:id="@+id/keyViewSymDel"
            style="@style/SpecialKeyViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            app:image="@drawable/ic_baseline_backspace_24"
            app:keyShouldRepeat="true"
            app:letter="Del"
            app:showImage="true"
            app:showInEditable="false" />
