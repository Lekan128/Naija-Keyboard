            app:letter="]"
            app:showInEditable="true" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.olalekan.naijakeyboard.KeyView
            android:id="@+id/keyViewSymR3C1"
            style="@style/KeyViewStyle"
            android:layout_width="wrap_content"
